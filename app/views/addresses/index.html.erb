<h2>配送先登録/一覧</h2>

<div class="container">
 <%= form_with model: @address, local:true do |f| %>

  <table>

   <tr>
    <th><%= f.label :postal_code, '郵便番号（ハイフンなし）' %></th>
    <td><%= f.text_field :postal_code %></td>
   </tr>

   <tr>
    <th><%= f.label :address, '住所' %></th>
    <td><%= f.text_field :address %></td>
   </tr>

   <tr>
    <th><%= f.label :name, '宛名' %></th>
    <td><%= f.text_field :name %></td>
   </tr>

   <tr>
    <td><%= f.submit '新規登録' %></td>
   </tr>

  </table>

 <% end %>

 　<table>
 　  <thead>
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @addresses.each do |address| %>
      <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td>
        <%= link_to "編集する", edit_address_path(address.id) %>
        <%= link_to "削除する", address_path(address.id), method: :delete %>
       </td>
      </tr>
     <% end %>
    </tbody>

 　</table>

</div>