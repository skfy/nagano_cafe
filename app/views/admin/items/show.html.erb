
<div class="col-6 ml-3">
 <h4>商品詳細</h4>
  <table class="table table-bordered">
   <div>
    <p><%= attachment_image_tag @item, :image %><p>
    <p>商品名：<%= @item.name %></p>
    <p>商品説明：<%= @item.introduction %></p>
    <p>ジャンル：<%= @item.genre.name %></p>
    <p>税込価格（税抜価格）：<%= @item.price %></p>
    <p>販売ステータス：
      <% if @item.is_active == true %>
       販売中
      <% else %>
       販売停止中
      <% end %>
    </p>
    <p><%= link_to "編集する", edit_admin_item_path(@item) %></p>
   </div>
  </table>
</div>

