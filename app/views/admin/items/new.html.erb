<h2>商品新規登録</h2>
<div class="container">

 <% if @item.errors.any? %>
    <h3>入力した内容にエラーが<%= @item.errors.count %>件あります</h3>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

 <div class="row">
  <div class="col-md-10 col-md-offset-1">
   <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
    <tabele>
     <tr>
      <td>商品画像</td>
       <%= attachment_image_tag @item, :image_id, :fill, 60, 60, fallback: "no_image.jpg"%>
       <label for="inputImage">Image</label>
       <%= f.attachment_field :image, placeholder: "商品画像" %>
     </tr></br>

     <tr>
      <td>商品名</td>
       <%= f.text_field :name %>
     </tr></br>

     <tr>
      <td>商品説明</td>
       <%= f.text_area :introduction %>
     </tr></br>

     <tr>
      <td>ジャンル</td>
       <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
     </tr></br>

     <tr>
      <td>税抜価格</td>
       <%= f.text_field :price %>
     </tr></br>

     <tr>
      <td>販売ステータス</td>
       <%= f.radio_button :is_active, "販売中", checked: true %>販売中
       <%= f.radio_button :is_active, "販売停止中" %>販売停止中

       <%#= f.radio_button :is_active, :true %>
       <%#= f.label :is_active, "販売中" %>

       <%#= f.radio_button :is_active, :false %>
       <%#= f.label :is_active, "販売停止中" %>
     </tr></br>

     <tr>
      <td><%= f.submit '新規登録' %></td>
     </tr>

    </table>

   <% end %>
  </div>
 </div>
</div>