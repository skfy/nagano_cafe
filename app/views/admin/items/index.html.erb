<h2>商品一覧</h2>

  <table>
   <tr>
    <td>商品ID</td>
    <td>商品名</td>
    <td>税抜価格</td>
    <td>ジャンル</td>
    <td>ステータス</td>
   </tr>
  </table>

<% @items.each do |item| %>
  <table>
   <tr>
    <td>
     <%= item.id %>
    </td>
    <td><%= link_to item.name, admin_item_path(item.id) %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
    <td><%= item.is_active_i18n %></td>
   </tr>
  </table>
 <% end %>