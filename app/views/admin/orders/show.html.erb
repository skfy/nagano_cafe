<h4>注文履歴詳細</h4>
 <table>

   <tr>
    <td>購入者</td>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
   </tr>

   <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
   </tr>

   <tr>
    <td>配送先</td>
    <td><%= @order.address %></td>
   </tr>

   <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
   </tr>

   <tr>
    <td>注文ステータス</td>
    <td><%= @order.status %></td>
   </tr>

  </table>

  <table>
   <tr>
    <td>商品名</td>
    <td>単価</td>
    <td>数量</td>
    <td>小計</td>
    <td>製作ステータス</td>
   </tr>
  </table>

  <% @items.each do |order_item| %>
  <table>
   <tr>
    <td><%= order_item.item.name %></td>
    <td><%= order_item.price %></td>
    <td><%= order_item.amount %></td>
    <td></td>
    <td><%= order_item.making_status %></td>
   </tr>
  </table>
 <% end %>