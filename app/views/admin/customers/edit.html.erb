<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
<%= form_with model: [:admin, @customer], local:true do |f| %>

  <tabele>

   <tr>
    <td>会員ID</td>
     <%= @customer.id %>
   </tr></br>

   <tr>
    <td>氏名</td>
     <%= f.text_field :last_name %>
     <%= f.text_field :first_name %>
   </tr></br>

   <tr>
    <td>フリガナ</td>
     <%= f.text_field :last_name_kana %>
     <%= f.text_field :first_name_kana %>
   </tr></br>

   <tr>
    <td>郵便番号</td>
     <%= f.text_field :postal_code %>
   </tr></br>

   <tr>
    <td>住所</td>
     <%= f.text_area :address %>
   </tr></br>

   <tr>
    <td>電話番号</td>
     <%= f.text_field :telephone_number %>
   </tr></br>

   <tr>
    <td>メールアドレス</td>
     <%= f.text_field :email %>
   </tr></br>

   <tr>
    <td>会員ステータス</td>
     <%= f.radio_button :is_active, "effectiveness" %>
     <%= f.label :is_active, "有効" %>

     <%= f.radio_button :is_active, "withdrawal" %>
     <%= f.label :is_active, "退会" %>
   </tr></br>

   <tr>
    <td><%= f.submit '変更を保存' %></td>
   </tr>

  </table>

 <% end %>