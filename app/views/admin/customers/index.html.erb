<h4>会員一覧</h4>

<div class="container">
 <div class="row">
  <div class="col-md-10 col-md-offset-1">
   <table class="table table-bordered">
    <thead>
     <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
     </tr>
    </thead>
    <tbody>
     <% @customers.each do |customer| %>
      <tr>
       <td><%= customer.id %></td>
       <td><%= customer.last_name %><%= customer.first_name %></td>
       <td><%= customer.email %></td>
       <td>
        <% if customer.is_active == true %>
         有効
        <% else %>
         退会
        <% end %>
       </td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>