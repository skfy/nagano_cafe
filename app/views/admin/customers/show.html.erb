
<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
   <table class="table">
    <tr>
     <th>会員ID</th>
     <td><%= @customer.id %></td>
    </tr></br>
    <tr>
     <th>氏名</th>
     <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr></br>
    <tr>
     <th>フリガナ</th>
     <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr></br>
    <tr>
     <th>郵便番号</th>
     <td><%= @customer.postal_code %></td>
    </tr></br>
    <tr>
     <th>住所</th>
     <td><%= @customer.address %></td>
    </tr></br>
    <tr>
     <th>電話番号</th>
     <td><%= @customer.telephone_number %></td>
    </tr></br>
    <tr>
     <th>メールアドレス</th>
     <td><%= @customer.email %></td>
    </tr></br>
    <tr>
     <th>会員ステータス</th>
     <td>
      <% if @customer.is_active == true %>
       有効
      <% else %>
       退会
      <% end %>
     </td>
    </tr></br>
    <tr>
     <th></th>
     <td><%= link_to "編集する", edit_admin_customer_path(@customer) %></td>
     <td><%= link_to "注文履歴一覧を見る", admin_order_path(@customer) %></td>
    </tr>
   </table>
  </div>
</div>