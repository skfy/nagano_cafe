<h2>ジャンル一覧・追加</h2>

 <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <tbody>
   <tr>
    <th><%= f.label :name, 'ジャンル名' %></th>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit '新規登録' %></td>
    </tr>
  </tbody>
 <% end %>

<div class="container">

  <div class="col-5 ml-3">
   <thead>
    <tr>
     <th>ジャンル<th>
    </tr>
   </thead>
   <% @genres.each do |genre| %>
    <table class="table">
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
     </tr>
    </table>
   <% end %>
  </div>

</div>