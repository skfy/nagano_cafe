<h2>ジャンル一覧・追加</h2>

 <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <tbody>
   <tr>
    <th><%= f.label :name, 'ジャンル名' %></th>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit '新規登録' %></td>
    </tr>
  </tbody>

 <% end %>

  <table>
   <tr>
    <td>ジャンル</td>
    <td></td>
   </tr>
  </table>

 <% @genres.each do |genre| %>
  <table>
   <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
   </tr>
  </table>
 <% end %>