
 <body>
  <div class="col-6 ml-3">
   <h4>注文履歴一覧</h4>
   <table class="table table-bordered">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>

   <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order_detail.order.address %></td>
      <td><%= order_detail.item_id %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.order.status_i18n %></td>
      <td><%= link_to '表示する', order_path(order_detail.order.id) %></td>
    </tr>
   <% end %>
   </table>
  </div>
 </body>