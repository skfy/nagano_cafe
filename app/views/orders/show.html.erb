<h2>注文履歴詳細画面</h2>

<h5>注文情報</h5>
 <body>
  <table border="1">
    <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
     <th>配送先</th>
     <td><%= @order.address %></td>
    </tr>
    <tr>
     <th>支払方法</th>
     <td>
      <% if @order.credit_card? %>
          <p>クレジットカード</p>
      <% else %>
          <p>銀行振込</p>
      <% end %>
     </td>
    </tr>
    <tr>
     <th>ステータス</th>
     <td><%= @order.status_i18n %></td>
    </tr>
  </table>
 </body>

<h5>請求情報</h5>
 <body>
  <table border="1">
    <tr>
     <th>商品合計</th>
     <td></td>
    </tr>
    <tr>
     <th>配送料</th>
     <td></td>
    </tr>
    <tr>
     <th>ご請求額</th>
     <td></td>
    </tr>
  </table>
</body>

<h5>注文内容</h5>
<body>
  <table border="1">
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
    <tr>
     <% @subtotal = 0 %>
     <% @order_details.each do |order_detail| %>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= @subtotal = order_detail.item.with_tax_price * order_detail.amount %></td>
     <% end %>
    </tr>
  </table>
 </body>