<h2>マイページ</h2>

<h3>登録情報</h3>
<%= link_to "編集する", edit_customer_path %>

<div class="container">
    <%= form_with model: @customer, local: true do |f| %>
     <%= f.hidden_field :customer_id %>
      <table>
        <tr>
         <th><%= f.label :name, '氏名' %></th>
         <td><%= f.text_field :last_name %></td>
         <td><%= f.text_field :first_name %></td>
        </tr>

        <tr>
         <th><%= f.label :name_kana, 'カナ' %></th>
         <td><%= f.text_field :last_name_kana %></td>
         <td><%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
         <th><%= f.label :postal_code, '郵便番号' %></th>
         <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
         <th><%= f.label :address,'住所' %></th>
         <td><%= f.text_field :address %></td>
        </tr>

        <tr>
         <th><%= f.label :telephone_number, '電話番号' %></th>
         <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
         <th><%= f.label :email, 'メールアドレス' %></th>
         <td><%= f.text_field :email %></td>
        </tr>

      </table>
    <% end %>

</div>

<h3>配送先</h3>
<h3>注文履歴</h3>