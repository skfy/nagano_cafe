<h2>会員情報編集</h2>
<%= form_with model: @customer, local: true do |f| %>
     <%= f.hidden_field :customer_id %>
      <table>
        <tr>
         <th><%= f.label :name, '氏名' %></th>
         <td><%= f.text_field :name %></td>
        </tr>

        <tr>
         <th><%= f.label :name_kana, 'カナ' %></th>
         <td><%= f.text_field :name_kana %></td>
        </tr>

        <tr>
         <th><%= f.label :postal_code, '郵便番号' %></th>
         <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
         <th><%= f.label :address,'住所' %></th>
         <td><%= f.text_field :address %></td>
        </tr>

        <tr>
         <th><%= f.label :telephone_number, '電話番号' %></th>
         <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
         <th><%= f.label :email, 'メールアドレス' %></th>
         <td><%= f.text_field :email %></td>
        </tr>

      </table>
     <%= f.submit '編集内容を保存' %>
     <%= f.submit '退会する' %>
    <% end %>