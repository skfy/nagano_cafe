<%= form_with model: @cart_item, local:true do |f| %>
<div class="container">
 <div class="row">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
   <table>
    <tr>
     <td><%= attachment_image_tag @item, :image %></td>
    </tr>
   </table>
  </div>
  <div class="col-lg-4">
   <table>
    <tr>
     <td><%= @item.name %></td>
    </tr>
    <tr>
     <td><%= @item.introduction %></td>
    </tr>
    <tr>
     <td><%= @item.price %>（税込）</td>
    </tr>
    <tr>
     <td><%= f.select :amount, [*1..3], include_blank: "個数選択" %><%= f.submit "カートに入れる" %></td>
    </tr>
    <%= f.hidden_field :item_id, :value => @item.id %>
   </table>
  </div>
 </div>
</div>
<% end %>