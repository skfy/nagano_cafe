<h2>注文履歴詳細画面</h2>
 <body>
  <tbody>
  <div class="col-5 ml-3">
   <h5>注文情報</h5>
   <table class="table table-bordered">
    <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
     <th>配送先</th>
     <td><%= @order.address %></td>
    </tr>
    <tr>
     <th>支払方法</th>
     <td>
      <% if @order.credit_card? %>
          <p>クレジットカード</p>
      <% else %>
          <p>銀行振込</p>
      <% end %>
     </td>
    </tr>
    <tr>
     <th>ステータス</th>
     <td><%= @order.status_i18n %></td>
    </tr>
   </table>
  </div>
  </tbody>

  <tbody>
  <div class="col-5 ml-3">
   <h5>請求情報</h5>
   <table class="table table-bordered">
   <%# @items.each do |item| %>
    <tr>
     <th>商品合計</th>
     <td><%= @order.total_payment %></td>
    </tr>
    <tr>
     <th>配送料</th>
     <td>800</td>
    </tr>
    <tr>
     <th>ご請求額</th>
     <td><%= @order.total_payment + 800 %></td>
    </tr>
   </table>
  </div>
  </tbody>
 </body>

 <body>
  <div class="col-5 ml-3">
   <h5>注文内容</h5>
   <table class="table table-bordered">
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>

     <% @subtotal = 0 %>
     <% @order_details.each do |order_detail| %>
     <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= @subtotal = order_detail.item.with_tax_price * order_detail.amount %></td>
     </tr>
     <% end %>

   </div>
  </table>
 </body>