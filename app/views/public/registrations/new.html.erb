<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <table class="table">
     <tr>
      <th><%= f.label :名前 %></th>
      <td>
      (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </td>
     </tr>
     <tr>
      <th><%= f.label :フリガナ %></th>
      <td>
      (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </td>
     <tr>
     <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
     </tr>
     <tr>
      <th><%= f.label :郵便番号（ハイフンなし） %></th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
     </tr>
     <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
     </tr>
     <tr>
      <th><%= f.label :電話番号（ハイフンなし） %></th>
      <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
     </tr>
     <tr>
      <th><%= f.label :パスワード（6文字以上） %></th>
      <td>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
     </tr>
     <tr>
      <th><%= f.label :パスワード（確認用） %></th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
     </tr>
    </table>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<p><%= link_to "こちら", customer_session_path %>からログインしてください。<p>

