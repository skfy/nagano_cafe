<h3>マイページ</h3>

<h4>登録情報</h4>
<%= link_to "編集する", edit_customer_path %>

<div class="container">
 <div class="row">
 <div class="col-5 ml-3">
  <table class="table table-bordered">
   <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
   </tr>

   <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
   </tr>

   <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
   </tr>

   <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
   </tr>

   <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
   </tr>

   <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
   </tr>
  </tbody>
 </div>
 </div>

 <div class="row">
  <h4>配送先</h4><%= link_to "一覧を見る", addresses_path %>
 </div>

 <div class="row">
  <h4>注文履歴</h4><%= link_to "一覧を見る", orders_path %>
 </div>

</div>