<%= form_with model: @orders, local:true do |f| %>
 <div>
  <p><%= attachment_image_tag @item, :image %><p>
  <p><%= @item.name %></p>
  <p><%= @item.introduction %></p>
  <p><%= @item.price %>（税込）</p>
  <p><%= f.select :amount, [*1..3], include_blank: "個数選択" %></p>
  <p><%= link_to "カートに入れる", cart_items_path %></p>
 </div>
<% end %>