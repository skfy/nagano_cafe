<%= form_with model: @cart_item, local:true do |f| %>
 <div>
  <p><%= attachment_image_tag @item, :image %><p>
  <p><%= @item.name %></p>
  <p><%= @item.introduction %></p>
  <p><%= @item.price %>（税込）</p>
  <p><%= f.select :amount, [*1..3], include_blank: "個数選択" %></p>

  <%= f.hidden_field :item_id, :value => @item.id %>

  <p><%= f.submit "カートに入れる" %></p>
 </div>
<% end %>